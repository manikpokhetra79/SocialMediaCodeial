<link rel="stylesheet" href="<%= assetPath('css/forms.css') %>" />

<div class="form-container">
  <h2>Register a new account</h2>
  <form action="/users/create" method="POST">
    <input type="text" name="name" placeholder="Enter name" required />
    <input type="email" name="email" placeholder="Enter Email" required />
    <input
      type="password"
      name="password"
      placeholder="Enter password"
      required
    />
    <input
      type="password"
      name="confirm_password"
      placeholder="Confirm Password"
      required
    />
    <input type="submit" value="Register" />
  </form>
  <button class="social-sign-in-up google-btn">
    <a href="/users/auth/google">
      <img src="/assets/img/icons/btn_google_dark_focus_ios.svg" />
      <p>Register With Google</p></a
    >
  </button>
  <button class="social-sign-in-up github-btn">
    <a href="/users/auth/github">
      <img src="/assets/img/icons/GitHub-Mark-Light-64px.png" />
      <p>Register With Github</p></a
    >
  </button>
</div>
