 <link rel="stylesheet" href="/css/forms.css">
 <section id="main-section">
    <!-- <% if(flash.success && flash.success.length ){%>
        <%= flash.success%>
        <%}%> -->
    <h2>Posts Timeline</h2>
    <% if(locals.user){ %> 
       <div class="form-container">
        <form id="new-post-form" action="/posts/create" method="post">
            <textarea name="content" cols="50" rows="6" placeholder="Post your mood..."></textarea>
            <input type="submit" value="Post">
        </form>
       </div>
    <%} else {%>
   <p> Login to Post</p>
    <% } %>
    
    <div id="posts-container">
        <ul>
        <% for(i of all_posts){%>
            <%- include('posts.ejs') %>
        <%}%>
        </ul>
    </div>
 </section>

<aside id="home-sidebar">
    <% if(locals.user){%>
        <div class="friends-list">
            <h2>Friends List</h2>
            <ul>
            <% for(friend of user.friendships){%>
                <% if(locals.user._id == friend.from_user.id){%>
             <li>
                 <img class="profile-picture" src="<%=friend.to_user.avatar%>">
                <a 
                alt="profile_pic" 
                href="/users/profile/<%=friend.to_user.id%>"><%=friend.to_user.name%></a>
            </li>
                <%}else{%>
            <li>
                <img
                alt="profile_pic"
                class="profile-picture" src="<%=friend.to_user.avatar%>">
                <a href="/users/profile/<%=friend.from_user.id%>"><%=friend.from_user.name%></a>
            </li>  
                <%}%>
            <%}%>
            </ul>
        </div>
    <%}%>
    <hr>
    <div class="all_users">
     <h2 style="text-align: center;"> All Users</h2>
    <ul>
    <% for(user of users){%>
       <li>
        <a href="/users/profile/<%=user.id%>"><%=user.name%></a>
       </li>
    <%}%>
    </ul>
    </div>
    <%- include('_chatbox.ejs') %>
</aside>


<!-- scripts -->
<script src="/js/home_post_comments.js"></script>
<script src="/js/home_posts.js"></script>
