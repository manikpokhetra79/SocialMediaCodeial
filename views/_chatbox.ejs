<!-- CHANGE :: Creat the code for chat box -->
<% if (locals.user){ %>
	<div id="user-chat-box" class="displayNone">
		<span onclick="closeChatBar()" 
		style="color:#45a29e;font-size: 1.5rem;"
		class="closebtn">X</span>
		<ul id="chat-messages-list" >
			<li class="other-message">
				<span>Other Message</span>
			</li>
			<li class="self-message">
				<span>
					Self Message
				</span>
				
			</li>

		</ul>
		<div id="chat-message-input-container">
			<input id="chat-message-input" placeholder="Type message here">
			<button id="send-message">Send</button>
		</div>

	</div>
<% } %>


<script>
	function openChatBar() {
  document.getElementById("user-chat-box").removeAttribute("class"); 
}
function closeChatBar() {
  document.getElementById("user-chat-box").setAttribute("class","displayNone"); 
}
</script>